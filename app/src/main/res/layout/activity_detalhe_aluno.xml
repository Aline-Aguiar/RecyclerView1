<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalheAlunoActivity"
    tools:ignore="ExtraText">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_alunos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Informações Aluno"
        app:titleTextColor="@color/white" />
    <TextView
        android:id="@+id/txt_name_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Fulano Da Silva"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_alunos" />
    <TextView
        android:id="@+id/txt_matricula_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_name_aluno"
        app:layout_constraintStart_toStartOf="@+id/txt_name_aluno"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_aluno" />

    <ImageView
        android:id="@+id/img_activity"
        android:layout_width="176dp"
        android:layout_height="284dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_matricula_aluno" />
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="382dp"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>